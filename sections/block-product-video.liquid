{% schema %}
  {
    "name": "Product Video",
    "settings": [
      {
        "id": "product_video",
        "type": "video",
        "label": "Product Video"
      }
    ]
  }
{% endschema %}

{% assign product_video = section.settings.product_video %}
{% if product_video != blank %}
  <div class="" style="padding-top: 9.5rem; display: flex; justify-content: center">
    <video
      src="{{ product_video.sources[1].url }}"
      width="{{ product_video.sources[1].width }}"
      height="{{ product_video.sources[1].height }}"
      data-scroll
      data-scroll-call="lazyLoad, Scroll"
      loop
      muted
      playsinline
      autoplay />
  </div>
{% endif %}