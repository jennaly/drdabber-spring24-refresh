{% schema %}
  {
    "name": "Homepage blocks",
    "blocks": [
      {
        "type": "featured_collections",
        "name": "Two Featured Collections",
        "settings": [
          {
            "id": "child_collection_1",
            "type": "collection",
            "label": "Child collection #1"
          }, {
            "id": "child_collection_2",
            "type": "collection",
            "label": "Child collection #2"
          }, {
            "id": "child_collection_3",
            "type": "collection",
            "label": "Child collection #3"
          }, {
            "id": "parent_collection",
            "type": "collection",
            "label": "Parent collection"
          }
        ]
      }, {
        "type": "banner",
        "name": "Banner",
        "settings": [
          {
            "id": "splash_title_1",
            "type": "text",
            "label": "Main text line 1"
          },
          {
            "id": "splash_title_2",
            "type": "text",
            "label": "Main text line 2"
          },
          {
            "id": "splash_title_font_shopify",
            "type": "font_picker",
            "label": "Banner main text - Google font",
            "default": "helvetica_n4"
          },
          {
            "id": "splash_title_font_custom",
            "type": "select",
            "label": "Banner main text - Custom font",
            "options": [
              {
                "value": "Druk Wide",
                "label": "Druk Wide"
              }, {
                "value": "Aeonik Pro",
                "label": "Aeonik Pro"
              }, {
                "value": "Maison Neue",
                "label": "Maison Neue"
              }, {
                "value": "MonopolTRIALKompakt",
                "label": "MonopolTRIALKompakt"
              }
            ]
          }, {
            "id": "splash_title_font_picker",
            "type": "select",
            "label": "Choose banner main text font",
            "options": [
              {
                "value": "shopify-font",
                "label": "Google font"
              }, {
                "value": "custom-font",
                "label": "Custom font"
              }
            ]
          }, {
            "id": "splash_cta",
            "type": "url",
            "label": "Call to action"
          }, {
            "id": "splash_cta_description",
            "type": "text",
            "label": "CTA Description"
          }, {
            "id": "splash_cta_button_label",
            "type": "text",
            "label": "CTA Button label",
            "default": "Shop now"
          }, {
            "id": "splash_image",
            "type": "image_picker",
            "label": "Image"
          }, {
            "id": "hero_image_mobile",
            "type": "image_picker",
            "label": "Image - mobile"
          }, {
            "id": "banner_video",
            "type": "video",
            "label": "Video"
          }, {
            "id": "banner_video_mobile",
            "type": "video",
            "label": "Video - mobile"
          }, {
            "id": "banner_bg_media",
            "type": "select",
            "label": "Choose background media",
            "options": [
              {
                "value": "image",
                "label": "Image"
              }, {
                "value": "video",
                "label": "Video"
              }
            ],
            "default": "video"
          }, {
            "id": "banner_name",
            "type": "text",
            "label": "Banner Name"
          }
        ]
      }, {
        "type": "carousel",
        "name": "Collection",
        "settings": [
          {
            "id": "collection",
            "type": "collection",
            "label": "Collection"
          }
        ]
      }
    ]
  }
{% endschema %}
{% capture apps %}                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      

{% for block in section.blocks %}
    {% case block.type %}

        {% when 'featured_collections' %}
            {% include 'block-three-col-collections' with
                collection_1_handle: block.settings.child_collection_1,
                collection_2_handle: block.settings.child_collection_2,
                   collection_3_handle: block.settings.child_collection_3,
                parent_collection: block.settings.parent_collection
            %}

        {% when 'banner' %}
            {% include 'block-splash' with
                title_line_1: block.settings.splash_title_1,
                title_line_2: block.settings.splash_title_2,
                splash_title_font_shopify: block.settings.splash_title_font_shopify,
                splash_title_font_custom: block.settings.splash_title_font_custom,
                splash_title_font_picker: block.settings.splash_title_font_picker,
                image: block.settings.splash_image,
                image_mobile: block.settings.hero_image_mobile,
                banner_video: block.settings.banner_video,
                banner_video_mobile: block.settings.banner_video_mobile,
                banner_bg_media: block.settings.banner_bg_media,
                cta: block.settings.splash_cta,
                cta_description: block.settings.splash_cta_description,
                cta_button_label: block.settings.splash_cta_button_label
            %}
            
        {% when 'carousel' %}
            {% assign collection = collections[block.settings.collection] %}
            {% include 'block-carousel' with
                title: collection.title,
                collection_link: collection.url,
                collection_link_label: "Shop all",
                collection_items: collection.products,
                tile_type: "product",
                loop_limit: 9
            %}

    {% endcase %}
{% endfor %}                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               {% endcapture %}
