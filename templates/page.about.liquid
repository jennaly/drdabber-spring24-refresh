<div class="c-page">
    <header class="c-page-header || c-section">
        <div class="o-container">
            <div class="c-page-header_inner">
                <div class="c-page-header_heading">
                    <h1 class="c-page-header_title">{{page.title}}</h1>
                </div>
            </div>
        </div>
    </header>

    {% section 'block-about-intro' %}

    {% if page.content != blank and page.content != nil %}
    <div class="c-section">
        <div class="c-article-wysiwyg" data-module-rich-wysiwyg>
            <div class="o-container -default || u-relative">
                <div class="c-article-wysiwyg_content || c-wysiwyg -rich">
                    <div class="c-article-wysiwyg_content_inner" data-rich-wysiwyg="content">
                        {{ page.content }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {% section 'support-footer' %}
</div>
